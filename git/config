[core]
	excludesfile = /Users/hs/.gitignore_global
    editor = /opt/brew/bin/nvim
    pager = delta

[mergetool "nvim"]
  cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

# set "nvim" as tool for merging
[merge]
    tool = nvim

[difftool]
    prompt = false

[diff]
    tool = vimdiff
    
[diff "swift"]
	xfuncname = ^\\s*(.*(func \\w|subscript\\(|init\\??\\(|deinit |class \\w|struct \\w|protocol \\w|extension \\w)[^{]*[{])
	#xfuncname = ^\\s*(.*(func \\w|subscript\\(|init\\??\\(|deinit |class \\w|struct \\w|protocol \\w|extension \\w).*)$

[user]
	name = hss
	email = hristo.staykov@gmail.com

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[delta]
    side-by-side = true
    theme = Github
    theme = base16
    #light = true
    file-style=underline 
    hunk-style=plain
    keep-plus-minus-markers = true
    line-numbers = true
    line-numbers-minus-style="red" 
    line-numbers-plus-style="green" 
    line-numbers-zero-style="brightblack"

[alias]
    co = checkout
    ci = commit
    s = status
    br = branch
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[tig "color"]
	cursor = white color0 bold
	title-focus = black color6 bold
	title-blur  = default default
	
	
