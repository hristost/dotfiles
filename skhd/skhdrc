# Input sources
meh - a : issw com.apple.keylayout.Canadian
meh - s : issw com.apple.keylayout.Bulgarian-Phonetic
meh - d : issw com.apple.keylayout.Spanish
meh - f : issw com.apple.inputmethod.TCIM.Pinyin
meh - g : issw com.apple.inputmethod.Korean.2SetKorean
meh - v : issw com.apple.inputmethod.ChineseHandwriting

# Focus window
meh - j    : yabai -m window --focus west
meh - k    : yabai -m window --focus south
meh - l    : yabai -m window --focus north
meh - 0x29 : yabai -m window --focus east

# Move window
hyper - j    : yabai -m window --swap west;  
hyper - k    : yabai -m window --swap south; 
hyper - l    : yabai -m window --swap north; 
hyper - 0x29 : yabai -m window --swap east;  

# Resize window
meh - u : yabai -m window --resize left:-100:0 || yabai -m window --resize right:-100:0
meh - i : yabai -m window --resize top:0:100   || yabai -m window --resize bottom:0:100
meh - o : yabai -m window --resize top:0:-100  || yabai -m window --resize bottom:0:-100
meh - p : yabai -m window --resize left:100:0  || yabai -m window --resize right:100:0

# Rotate split
meh - m : yabai -m window --toggle split

meh - 0x2B : yabai -m space --rotate 90
meh - 0x2F : yabai -m space --mirror x-axis
meh - 0x2C : yabai -m space --mirror y-axis
meh - return : yabai -m space --balance

meh - q : yabai -m display --focus 1
meh - w : yabai -m display --focus 2

# Multiple displays
hyper - q : yabai -m window --display 1; yabai -m display --focus 1 
hyper - w : yabai -m window --display 2; yabai -m display --focus 2 

# Fullscreen
meh - y : yabai -m window --toggle native-fullscreen
meh - h : yabai -m window --toggle zoom-fullscreen
meh - n : yabai -m window --toggle zoom-parent

# Spaces

# meh + n = go to space n
meh - 1 : yabai -m space  --focus 1
meh - 2 : yabai -m space  --focus 2
meh - 3 : yabai -m space  --focus 3
meh - 4 : yabai -m space  --focus 4
meh - 5 : yabai -m space  --focus 5
meh - 6 : yabai -m space  --focus 6
meh - 7 : yabai -m space  --focus 7
meh - 8 : yabai -m space  --focus 8

# hyper + n = move window to space n
hyper - 1 : yabai -m window --space 1; yabai -m space  --focus 1
hyper - 2 : yabai -m window --space 2; yabai -m space  --focus 2
hyper - 3 : yabai -m window --space 3; yabai -m space  --focus 3
hyper - 4 : yabai -m window --space 4; yabai -m space  --focus 4
hyper - 5 : yabai -m window --space 5; yabai -m space  --focus 5
hyper - 6 : yabai -m window --space 6; yabai -m space  --focus 6
hyper - 7 : yabai -m window --space 7; yabai -m space  --focus 7
hyper - 8 : yabai -m window --space 8; yabai -m space  --focus 8

### Ortho keyboard

# Input sources
fn - a : issw com.apple.keylayout.Canadian
fn - o : issw com.apple.keylayout.Bulgarian-Phonetic
fn - e : issw com.apple.keylayout.Spanish
fn - u : issw com.apple.inputmethod.TCIM.Pinyin
fn - i : issw com.apple.inputmethod.Korean.2SetKorean
fn - k : issw com.apple.inputmethod.ChineseHandwriting

# Focus window
fn - h : yabai -m window --focus west  || yabai -m display --focus west
fn - t : yabai -m window --focus south || yabai -m display --focus south
fn - n : yabai -m window --focus north || yabai -m display --focus north
fn - s : yabai -m window --focus east  || yabai -m display --focus east

# Move window
hyper - j    : yabai -m window --swap west;  
hyper - k    : yabai -m window --swap south; 
hyper - l    : yabai -m window --swap north; 
hyper - 0x29 : yabai -m window --swap east;  
fn + cmd - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m window --wrap last;  yabai -m display --focus west);    
fn + cmd - t : yabai -m window --swap south; 
fn + cmd - n : yabai -m window --swap north; 
fn + cmd - s : yabai -m window --swap east || $(yabai -m window --display east; yabai -m window --wrap first; yabai -m display --focus east);  

# Resize window
fn - g : yabai -m window --resize left:-100:0 || yabai -m window --resize right:-100:0
fn - c : yabai -m window --resize top:0:100   || yabai -m window --resize bottom:0:100
fn - r : yabai -m window --resize top:0:-100  || yabai -m window --resize bottom:0:-100
fn - l : yabai -m window --resize left:100:0  || yabai -m window --resize right:100:0

# Rotate split
fn - m : yabai -m window --toggle split

fn - 0x2B : yabai -m space --rotate 90
fn - 0x2F : yabai -m space --mirror x-axis
fn - 0x2C : yabai -m space --mirror y-axis
fn - 0x18 : yabai -m space --balance


# Multiple displays
hyper - q : yabai -m window --display 1; yabai -m display --focus 1 
hyper - w : yabai -m window --display 2; yabai -m display --focus 2 

# Fullscreen
fn - y : yabai -m window --toggle native-fullscreen
fn - h : yabai -m window --toggle zoom-fullscreen
fn - n : yabai -m window --toggle zoom-parent

# Spaces

# fn + n = go to space n
fn - 1 : yabai -m space  --focus 1
fn - 2 : yabai -m space  --focus 2
fn - 3 : yabai -m space  --focus 3
fn - 4 : yabai -m space  --focus 4
fn - 5 : yabai -m space  --focus 5
fn - 6 : yabai -m space  --focus 6
fn - 7 : yabai -m space  --focus 7
fn - 8 : yabai -m space  --focus 8

# hyper + n = move window to space n
hyper - 1 : yabai -m window --space 1; yabai -m space  --focus 1
hyper - 2 : yabai -m window --space 2; yabai -m space  --focus 2
hyper - 3 : yabai -m window --space 3; yabai -m space  --focus 3
hyper - 4 : yabai -m window --space 4; yabai -m space  --focus 4
hyper - 5 : yabai -m window --space 5; yabai -m space  --focus 5
hyper - 6 : yabai -m window --space 6; yabai -m space  --focus 6
hyper - 7 : yabai -m window --space 7; yabai -m space  --focus 7
hyper - 8 : yabai -m window --space 8; yabai -m space  --focus 8

